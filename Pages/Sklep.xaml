<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Pages.Sklep">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="iloscMonet" HorizontalOptions="Center" />
            <ListView  x:Name="shopListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout BackgroundColor="#f2fffd" Orientation="Vertical">
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding nazwa}" TextColor="#ff0090" FontSize="Large" />
                                    <Label Text="{Binding cena, StringFormat='Cena: {0}'}"/>
                                    <Label Text="{Binding id_przedmiotu}" IsVisible="False" x:Name="shop_clicked_id" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>